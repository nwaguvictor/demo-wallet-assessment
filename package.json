{
  "name": "demo_credit",
  "version": "1.0.0",
  "description": "A mobile lending app with wallet functionality",
  "main": "index.js",
  "author": "Victor Nwagu",
  "license": "MIT",
  "scripts": {
    "migrate": "ts-node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:latest --knexfile knexfile.ts",
    "rollback": "ts-node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:rollback --knexfile knexfile.ts",
    "make:migration": "ts-node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:make",
    "build": "tsc",
    "compile": "tsc --watch",
    "start:dev": "nodemon ./dist/index.js",
    "start:prod": "node ./dist/index.js",
    "test": "jest"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/mock-knex": "^0.4.8",
    "@types/node": "^22.15.2",
    "jest": "^29.7.0",
    "knex-mock-client": "^3.0.2",
    "mock-knex": "^0.4.13",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "knex": "^3.1.0",
    "mysql2": "^3.14.1"
  }
}
